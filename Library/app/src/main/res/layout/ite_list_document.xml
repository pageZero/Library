<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:weightSum="1">


    <ImageView
        android:id="@+id/doc_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/bg_pic" />


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:layout_weight="0.98">

        <TextView
            android:id="@+id/tv_doc_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextH4"
            android:text="@string/date"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/tv_doc_title"
            style="@style/TextH2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_color_defaut"
            android:maxLines="2"
            android:textSize="16dp"
            android:layout_margin="5dp" />



        <LinearLayout
            android:id="@+id/id_ll_size_author"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_doc_size"
                style="@style/TextH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/tv_doc_author"
                style="@style/TextH3"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doc_author"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
